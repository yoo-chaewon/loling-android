<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/MainLolingRoomX5"
    android:layout_height="@dimen/MainLolingRoomY5">

    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/MainLolingRoomX"
        android:layout_height="@dimen/MainLolingRoomY"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/circle_round10"
        android:backgroundTint="@color/mainLightPink"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/circle_round10"
            android:tint="@color/mainPeachyPink"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvRolingRoomTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:lineSpacingExtra="1sp"
            android:text="생일축하"
            android:textColor="@color/black1"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            tools:text="생일축하" />

        <TextView
            android:id="@+id/tvRolingRoomDday"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/circle_round8"
            android:backgroundTint="@color/mainPeachyPink"
            android:lineSpacingExtra="1sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="D-1"
            android:textColor="@color/white0"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />


        <TextView
            android:id="@+id/tvRolingRoomTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:lineSpacingExtra="3sp"
            android:text="소현님에게"
            android:textColor="@color/black1"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/tvRolingRoomDday" />

        <TextView
            android:id="@+id/tvRolingRoomDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:lineSpacingExtra="1sp"
            android:text="2019.01.05"
            android:textColor="@color/black1"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/tvRolingRoomTarget" />

        <TextView
            android:id="@+id/tvRolingRoomCountParticipant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:lineSpacingExtra="3sp"
            android:text="29"
            android:textColor="@color/black1"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/tvRolingRoomCountCountParticipant"
            app:layout_constraintStart_toStartOf="@+id/tvRolingRoomCountCountParticipant" />

        <TextView
            android:id="@+id/tvRolingRoomCountCountParticipant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:lineSpacingExtra="1sp"
            android:text="참여 인원"
            android:textColor="@color/black1"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>